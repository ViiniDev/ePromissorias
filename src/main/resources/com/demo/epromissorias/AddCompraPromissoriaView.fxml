<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.demo.epromissorias.controllers.AddCompraController" spacing="10" alignment="center">
    <padding>
        <Insets top="10" right="20" bottom="10" left="20"/>
    </padding>

    <!-- Título da tela -->
    <Label text="Adicionar Compra" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Campo para valor da compra -->
    <HBox spacing="5">
        <Label text="Valor da Compra:"/>
        <TextField fx:id="valorField" promptText="Insira o valor" prefWidth="200"/>
    </HBox>

    <!-- Campo para data da compra -->
    <HBox spacing="5">
        <Label text="Data da Compra:"/>
        <DatePicker fx:id="dataCompraPicker" prefWidth="200"/>
    </HBox>

    <!-- Botões de ação -->
    <HBox spacing="10">
        <Button text="Salvar Compra" onAction="#salvarCompra"/>
        <Button text="Cancelar" onAction="#cancelar"/>
    </HBox>
</VBox>
