<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.demo.epromissorias.controllers.CadastroPromissoriaController"
          alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Nome Completo" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="nomeField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Endereço" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="enderecoField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="CPF" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="cpfField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Telefone" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="telefoneField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Data de Criação da Promissoria" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <DatePicker fx:id="dataCompraPicker" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Data Prevista para Pagamento" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <DatePicker fx:id="dataPagamentoPicker" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Button text="Cadastrar" onAction="#handleCadastrarPromissoria" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
</GridPane>
